<h2 class="page-header">Dashboard</h2>
<p>Welcome to your dashboard, {{user.name}}</p>

<ul>
  {{#each polls}}
    <li>
      <form method="post" action="/polls/delete/{{this.key}}" value="{{this.key}}" onsubmit="return confirm('Are you sure you want to delete this poll? \n-{{this.name}}')">
        <h4>
          <a href="/polls/{{ this.key }}" >{{ this.name }}</a>
          <button type="submit" class="btn btn-danger btn-sm" >Delete</button>
        </h4>
      </form>
    </li>
  {{/each}}
</ul>